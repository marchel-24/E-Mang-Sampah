<UserControl x:Class="E_Mang_Sampah.View.Community"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:E_Mang_Sampah.View"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="contentControl" Height="auto" Width="auto"/>
        <Button x:Name="SwitchUserControl"
                    Style="{StaticResource MakePost}"
                    Tag="{StaticResource ButtonColor2_Click}"
                    Click="SwitchUserControl_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 15 10">
            <fa:IconImage Icon="Plus" 
                        Style="{StaticResource controlButtonIcon2}"/>

        </Button>
    </Grid>
</UserControl>
